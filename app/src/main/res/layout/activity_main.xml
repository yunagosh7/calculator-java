<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginHorizontal="10dp"
        android:textColor="#80000000"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv_expression"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_result"
        android:layout_above="@+id/linear_buttons"
        android:layout_marginHorizontal="10dp"
        android:hint="0"
        android:textColorHint="@color/black"
        android:gravity="end|center_vertical"
        android:textColor="#000000"
        android:textSize="40sp" />

    <LinearLayout
        android:id="@+id/linear_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_c"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="0.5dp"
                android:background="@drawable/ripple_efect_black"
                android:textColor="@color/white"
                android:text="c"
                android:layout_weight="1"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_add_sub"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginHorizontal="0.5dp"
                android:background="@drawable/ripple_efect_black"
                android:textColor="@color/white"
                android:text="+/-"
                android:layout_weight="1"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_modulus"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginHorizontal="0.5dp"
                android:background="@drawable/ripple_efect_black"
                android:textColor="@color/white"
                android:text="%"
                android:layout_weight="1"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_division"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginEnd="1dp"
                android:layout_marginStart="0.5dp"
                android:background="@drawable/ripple_effect_purple"
                android:textColor="@color/white"
                android:text="รท"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_seven"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="0.5dp"
                android:background="@drawable/ripple_efect_black"
                android:textColor="@color/white"
                android:text="7"
                android:layout_weight="1"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_eight"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginHorizontal="0.5dp"
                android:background="@drawable/ripple_efect_black"
                android:textColor="@color/white"
                android:text="8"
                android:layout_weight="1"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_nine"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginHorizontal="0.5dp"
                android:background="@drawable/ripple_efect_black"
                android:textColor="@color/white"
                android:text="9"
                android:layout_weight="1"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_multiplication"
                android:layout_width="0dp"
                android:layout_height="80dp"
            android:layout_marginEnd="1dp"
            android:layout_marginStart="0.5dp"
                android:background="@drawable/ripple_effect_purple"
                android:textColor="@color/white"
                android:text="ร"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_four"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:background="@drawable/ripple_efect_black"
                android:textColor="@color/white"
                android:text="4"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="0.5dp"
                android:layout_weight="1"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_five"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginHorizontal="0.5dp"
                android:background="@drawable/ripple_efect_black"
                android:textColor="@color/white"
                android:text="5"
                android:layout_weight="1"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_six"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginHorizontal="0.5dp"
                android:background="@drawable/ripple_efect_black"
                android:textColor="@color/white"
                android:text="6"
                android:layout_weight="1"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_subtraction"
                android:layout_width="0dp"
                android:layout_height="80dp"
            android:layout_marginEnd="1dp"
            android:layout_marginStart="0.5dp"
                android:background="@drawable/ripple_effect_purple"
                android:textColor="@color/white"
                android:text="-"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_one"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="0.5dp"
                android:background="@drawable/ripple_efect_black"
                android:textColor="@color/white"
                android:text="1"
                android:layout_weight="1"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_two"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginHorizontal="0.5dp"
                android:background="@drawable/ripple_efect_black"
                android:textColor="@color/white"
                android:text="2"
                android:layout_weight="1"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_three"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginHorizontal="0.5dp"
                android:background="@drawable/ripple_efect_black"
                android:textColor="@color/white"
                android:text="3"
                android:layout_weight="1"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_addition"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginEnd="1dp"
                android:layout_marginStart="0.5dp"
                android:background="@drawable/ripple_effect_purple"
                android:textColor="@color/white"
                android:text="+"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_dot"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="0.5dp"
                android:background="@drawable/ripple_efect_black"
                android:textColor="@color/white"
                android:text="."
                android:layout_weight="1"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_zero"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginHorizontal="0.5dp"
                android:background="@drawable/ripple_efect_black"
                android:textColor="@color/white"
                android:text="0"
                android:layout_weight="1"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_del"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginHorizontal="0.5dp"
                android:background="@drawable/ripple_efect_black"
                android:textColor="@color/white"
                android:text="del"
                android:layout_weight="1"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_equals"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginEnd="1dp"
                android:layout_marginStart="0.5dp"
                android:background="@drawable/ripple_effect_yellow"
                android:textColor="@color/white"
                android:text="="
                android:layout_weight="1"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>